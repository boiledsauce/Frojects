{{#unless errors.length}}

    <div class="container">
        <div class="row mb-5">
            <div class="col-md-6">
                <h1 class="mb-3">{{project.name}}</h1>
            </div>
            <div class="col-md-6 d-flex justify-content-md-end align-items-center">
                <a class="btn btn-primary" href="/app/projects/{{project.id}}/share">Dela</a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 d-flex justify-content-between">
                <h2 class="display-5 mb-3">Uppgifter</h2>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-md-end">
                <a class="btn btn-primary" href="/app/projects/{{project.id}}/tasks/create">Skapa uppgift</a>
            </div>
        </div>
        <div class="row">
            <div class="col">

                {{#if tasks.length}}
                    <div class="list-group">
                    
                        {{#each tasks}}
                            <a href="/app/projects/{{projectId}}/tasks/{{this.id}}" class="list-group-item list-group-item-action" aria-current="true">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">{{this.title}}</h5>
                                <small>3 days ago</small>
                            </div>
                            <p class="mb-1">{{this.description}}</p>
                            </a>
                        {{/each}}

                    </div>
                {{/if}}

            </div>
        </div>
    </div>
    
{{/unless}}
 