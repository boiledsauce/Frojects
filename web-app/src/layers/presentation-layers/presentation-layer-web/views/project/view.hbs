{{#unless errors.length}}

    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <h1 class="mb-3">{{project.name}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col mb-3 d-flex flex-column flex-md-row">
                <a class="btn btn-primary me-md-3 mb-3" href="/app/projects/{{project.id}}/usersWithAccess"><i class="bi bi-people me-2"></i>Användare med tillgång</a>
                {{#if userIsOwner}}
                    <a class="btn btn-primary me-md-3 mb-3" href="/app/projects/{{project.id}}/share"><i class="bi bi-person-plus-fill me-2"></i>Dela</a>
                    <a class="btn btn-primary me-md-3 mb-3" href="/app/projects/{{project.id}}/update"><i class="bi bi-pencil-square me-2"></i></i>Uppdatera projekt</a>
                    <a class="btn btn-danger mb-3" href="/app/projects/{{project.id}}/delete"><i class="bi bi-trash me-2"></i>Ta bort projekt</a>
                {{/if}}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 d-flex justify-content-between">
                <h2 class="mb-3">Uppgifter</h2>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-md-end">
                <a class="btn btn-primary" href="/app/projects/{{project.id}}/tasks/create"><i class="bi bi-plus-circle me-2"></i>Skapa uppgift</a>
            </div>
        </div>
        <div class="row">
            <div class="col">

                {{#if tasks.length}}
                    <div class="list-group">
                    
                        {{#each tasks}}
                            <a href="/app/projects/{{projectId}}/tasks/{{this.id}}" class="list-group-item list-group-item-action" aria-current="true">
                            <div class="d-flex w-100 justify-content-between">
                                <h3 class="mb-1">{{this.title}}</h3>
                                <small>{{this.createdAt}}</small>
                            </div>
                            <p class="mb-1">{{this.description}}</p>
                            </a>
                        {{/each}}

                    </div>

                {{else}}
                    <p>Inga uppgifter ännu</p>    
                {{/if}}

            </div>
        </div>
    </div>
    
{{/unless}}
 