<div class="container">
    <div class="row">
        
        <div class="col col-md-6">
            <h1 class="mb-4">Uppdatera projekt</h1>

                <form action="" method="POST">
                    {{> csrfToken}}
                    <div class="form-group mb-3">
                        <label for="name">Projektnamn</label>
                        <input type="text" class="form-control" name="name" placeholder="Ange projektnamn..." value="{{project.name}}">
                    </div>
                    <button type="submit" class="btn btn-primary">Uppdatera</button>
                    <a href = "/app/projects/{{project.id}}"></a><button type="submit" class="btn btn-primary">Avbryt</button>
                </form>
                
        </div>
    </div>
</div>
